<% layout('layouts/app') %>

<% if (currentUser && user._id.equals(currentUser._id)) { %>
  <h2 class="my-3 col-10 offset-1 col-lg-8 offset-lg-2">Welcome <span class="fw-bold"><%= user.username %></span></h2>
<% } %>

<div class="card col-10 offset-1 col-lg-8 offset-lg-2 <%= (currentUser && user._id.equals(currentUser._id)) ? '' : 'text-bg-light' %>">
  
  <% if (currentUser && user._id.equals(currentUser._id)) { %>
    <div class="position-absolute top-0 end-0">
      <button class="btn btn-secondary dropdown-toggle d-flex justify-content-center align-items-center" type="button" data-bs-toggle="dropdown" data-bs-auto-close="inside" aria-expanded="false">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-gear" viewBox="0 0 16 16">
          <path d="M8 4.754a3.246 3.246 0 1 0 0 6.492 3.246 3.246 0 0 0 0-6.492M5.754 8a2.246 2.246 0 1 1 4.492 0 2.246 2.246 0 0 1-4.492 0"/>
          <path d="M9.796 1.343c-.527-1.79-3.065-1.79-3.592 0l-.094.319a.873.873 0 0 1-1.255.52l-.292-.16c-1.64-.892-3.433.902-2.54 2.541l.159.292a.873.873 0 0 1-.52 1.255l-.319.094c-1.79.527-1.79 3.065 0 3.592l.319.094a.873.873 0 0 1 .52 1.255l-.16.292c-.892 1.64.901 3.434 2.541 2.54l.292-.159a.873.873 0 0 1 1.255.52l.094.319c.527 1.79 3.065 1.79 3.592 0l.094-.319a.873.873 0 0 1 1.255-.52l.292.16c1.64.893 3.434-.902 2.54-2.541l-.159-.292a.873.873 0 0 1 .52-1.255l.319-.094c1.79-.527 1.79-3.065 0-3.592l-.319-.094a.873.873 0 0 1-.52-1.255l.16-.292c.893-1.64-.902-3.433-2.541-2.54l-.292.159a.873.873 0 0 1-1.255-.52zm-2.633.283c.246-.835 1.428-.835 1.674 0l.094.319a1.873 1.873 0 0 0 2.693 1.115l.291-.16c.764-.415 1.6.42 1.184 1.185l-.159.292a1.873 1.873 0 0 0 1.116 2.692l.318.094c.835.246.835 1.428 0 1.674l-.319.094a1.873 1.873 0 0 0-1.115 2.693l.16.291c.415.764-.42 1.6-1.185 1.184l-.291-.159a1.873 1.873 0 0 0-2.693 1.116l-.094.318c-.246.835-1.428.835-1.674 0l-.094-.319a1.873 1.873 0 0 0-2.692-1.115l-.292.16c-.764.415-1.6-.42-1.184-1.185l.159-.291A1.873 1.873 0 0 0 1.945 8.93l-.319-.094c-.835-.246-.835-1.428 0-1.674l.319-.094A1.873 1.873 0 0 0 3.06 4.377l-.16-.292c-.415-.764.42-1.6 1.185-1.184l.292.159a1.873 1.873 0 0 0 2.692-1.115z"/>
        </svg>
      </button>
      <ul class="dropdown-menu border border-secondary">
        <li><button class="dropdown-item" type="button" data-bs-toggle="modal" data-bs-target="#editUsernamaModal">Change username</button></li>
        <li><button class="dropdown-item" type="button" data-bs-toggle="modal" data-bs-target="#editEmailModal">Change email</button></li>
        <li><button class="dropdown-item" type="button" data-bs-toggle="modal" data-bs-target="#editProfilModal"><%= (!user.profil) ? 'Add ' : 'Change ' %>photo profile</button></li>
        <li><button class="dropdown-item" type="button" data-bs-toggle="modal" data-bs-target="#editFullnameModal"><%= (!user.fullName) ? 'Add ' : 'Change ' %>full name</button></li>
        <li><button class="dropdown-item" type="button" data-bs-toggle="modal" data-bs-target="#editDescriptionModal"><%= (!user.description) ? 'Add ' : 'Change ' %>description</button></li>
        <li><button class="dropdown-item" type="button" data-bs-toggle="modal" data-bs-target="#editContactModal" class="border-0 w-100"><%= (!user.address || !user.instagram || !user.twitter || !user.facebook) ? 'Add ' : 'Change ' %>Contact</button></li>
        <li><button class="dropdown-item" type="button" data-bs-toggle="modal" data-bs-target="#editPasswordModal">Change password</button></li>
        <li><hr class="dropdown-divider"></li>
        <li><button class="dropdown-item text-danger" type="button" data-bs-toggle="modal" data-bs-target="#deleteAccountConfirmation">Delete account</button></li>
      </ul>
    </div>

    <!-- Modal username -->
    <div class="modal fade" id="editUsernamaModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="staticBackdropLabel">Change Username</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form class="px-4 validated-form" id="editUsername" action="/account/<%= user._id %>/username?_method=PATCH" method="POST">
              <label for="username" class="mb-2">Type your new username</label>
              <input type="text" class="text-bg-light form-control" name="username" id="username" placeholder="your_username" value="<%= user.username %>" required>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary w-25" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" form="editUsername" class="btn btn-success w-25 d-flex gap-2 align-items-center justify-content-center">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send" viewBox="0 0 16 16">
                <path d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576zm6.787-8.201L1.591 6.602l4.339 2.76z"/>
              </svg>
              Save
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal email -->
    <div class="modal fade" id="editEmailModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="staticBackdropLabel">Change Email</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form class="px-4 validated-form" id="editEmail" action="/account/<%= user._id %>/email?_method=PATCH" method="POST">
              <label for="email" class="mb-2">Type your new email</label>
              <input type="email" class="text-bg-light form-control" name="email" id="email" placeholder="example@mail.com" value="<%= user.email %>" required>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary w-25" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" form="editEmail" class="btn btn-success w-25 d-flex gap-2 align-items-center justify-content-center">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send" viewBox="0 0 16 16">
                <path d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576zm6.787-8.201L1.591 6.602l4.339 2.76z"/>
              </svg>
              Save
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal profil -->
    <div class="modal fade" id="editProfilModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="staticBackdropLabel">
              Change Photo Profile
            </h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form class="px-4 validated-form" id="editProfil" action="/account/<%= user._id %>/profil?_method=PATCH" method="POST" enctype="multipart/form-data">
              <label class="mb-2 w-100">
                Pick your photo profile
                <input type="file" class="text-bg-light form-control" name="image" id="image" accept="image/*" required>
              </label>
            </form>

            <% if (user.profil.url) { %>
              <button type="button" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#profilDeleteConfirmationModal" class="mx-4 my-1 btn btn-sm btn-outline-danger d-flex align-items-center gap-1">
                <div>
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                  </svg>
                </div>
                Delete Photo Profile
              </button>
            <% } %>
              
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary w-25" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" form="editProfil" class="btn btn-success w-25 d-flex gap-2 align-items-center justify-content-center">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send" viewBox="0 0 16 16">
                <path d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576zm6.787-8.201L1.591 6.602l4.339 2.76z"/>
              </svg>
              Save
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal fullname -->
    <div class="modal fade" id="editFullnameModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="staticBackdropLabel">
              <%= (!user.fullName) ? 'Add Full Name' : 'Change Full Name' %>
            </h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form class="px-4 validated-form" id="editFullname" action="/account/<%= user._id %>/fullname?_method=PATCH" method="POST">
              <label for="fullname" class="mb-2">
                <%= (!user.fullName) ? 'Add your full name' : 'Type your new full name' %>
              </label>
              <input type="text" class="text-bg-light form-control" name="fullname" id="fullname" placeholder="Your Full Name" value="<%= user.fullName %>" required>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary w-25" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" form="editFullname" class="btn btn-success w-25 d-flex gap-2 align-items-center justify-content-center">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send" viewBox="0 0 16 16">
                <path d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576zm6.787-8.201L1.591 6.602l4.339 2.76z"/>
              </svg>
              Save
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal description -->
    <div class="modal fade" id="editDescriptionModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="staticBackdropLabel">
              <%= (!user.description) ? 'Add Description' : 'Change Description' %>
            </h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form class="px-4 validated-form" id="editDescription" action="/account/<%= user._id %>/description?_method=PATCH" method="POST">
              <label for="description" class="mb-2">
                Describe more about you
              </label>
              <textarea type="text" class="text-bg-light form-control" name="description" id="description" placeholder="Your Description" rows="5" required><%= (user.description) ? user.description : '' %></textarea>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary w-25" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" form="editDescription" class="btn btn-success w-25 d-flex gap-2 align-items-center justify-content-center">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send" viewBox="0 0 16 16">
                <path d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576zm6.787-8.201L1.591 6.602l4.339 2.76z"/>
              </svg>
              Save
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal contact -->
    <div class="modal fade" id="editContactModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="staticBackdropLabel">
              <%= (!user.address || !user.instagram || !user.twitter || !user.facebook) ? 'Add Contact' : 'Update Contact' %>
            </h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form class="validated-form" id="editContact" action="/account/<%= user._id %>/contact?_method=PATCH" method="POST">
              <label class="mb-2 w-100 px-4">
                <%= (!user.address) ? 'Add address' : 'Change address' %>
                <input type="text" class="text-bg-light form-control" name="address" placeholder="Your Address" value="<%= user.address %>">
              </label>
              <label class="mb-2 w-100 px-4">
                <%= (!user.instagram) ? 'Add Instagram' : 'Change Instagram' %>
                <input type="text" class="form-control" name="instagram" placeholder="Your Instagram Link" value="<%= user.instagram %>">
              </label>
              <label class="mb-2 w-100 px-4">
                <%= (!user.twitter) ? 'Add Twitter' : 'Change Twitter' %>
                <input type="text" class="form-control" name="twitter" placeholder="Your Twitter Link" value="<%= user.twitter %>">
              </label>
              <label class="mb-2 w-100 px-4">
                <%= (!user.facebook) ? 'Add Facebook' : 'Change Facebook' %>
                <input type="text" class="form-control" name="facebook" placeholder="Your Facebook Link" value="<%= user.facebook %>">
              </label>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary w-25" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" form="editContact" class="btn btn-success w-25 d-flex gap-2 align-items-center justify-content-center">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send" viewBox="0 0 16 16">
                <path d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576zm6.787-8.201L1.591 6.602l4.339 2.76z"/>
              </svg>
              Save
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal password -->
    <div class="modal fade" id="editPasswordModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="staticBackdropLabel">
              Change Password
            </h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form class="px-4 validated-form" id="editPassword" action="/account/<%= user._id %>/password?_method=PATCH" method="POST">
              <div class="mb-3 input-group">
                <div class="form-floating">
                  <input type="password" class="text-bg-light form-control" name="password" id="password" placeholder="admin123" aria-describedby="passwordHelpBlock" required>
                  <label for="password">New Password</label>
                </div>
                <%- include('../layouts/partials/passwordToggle') %>
                <div id="passwordHelpBlock" class="form-text w-100">
                  Your new password must be at least 6 characters long, contain letters and numbers.
                </div>
              </div>
              <div class="form-floating mb-3">
                <input type="password" class="text-bg-light form-control" name="passwordConfirmation" id="passwordConfirmation" placeholder="type your new password again" required>
                <label for="passwordConfirmation">Password Confirmation</label>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary w-25" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" form="editPassword" class="btn btn-success w-25 d-flex gap-2 align-items-center justify-content-center">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send" viewBox="0 0 16 16">
                <path d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576zm6.787-8.201L1.591 6.602l4.339 2.76z"/>
              </svg>
              Save
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal delete profil confirmation -->
    <div class="modal fade" id="profilDeleteConfirmationModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="staticBackdropLabel">Delete Confirmation</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            Are you sure you want to delete this photo profile? This action cannot be undone.
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary w-25" data-bs-dismiss="modal">Cancel</button>
            <form action="/account/<%= user._id %>/profil?_method=DELETE" method="POST" class="w-25">
              <button type="submit" class="btn btn-danger w-100 d-flex gap-2 align-items-center justify-content-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                  <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                  <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                </svg>
                Delete
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

  <% } %>
  
  <div class="card-body d-flex flex-column gap-2">
    <div class="card-header d-flex flex-row gap-2 gap-md-3 gap-xl-4 mb-1 align-items-center">
      <div class="w-25 d-flex justify-content-center align-items-center">
        <img class="custom-profil custom-object border rounded-circle" src="<%= (!user.profil.url) ? '/images/profiles/placeholder.jpg' : '/images/profiles/'+ user.profil.filename %>" alt="Profile Picture of <%= user.username %>">
      </div>
      <div>
        <h1>@<%= user.username %></h1>
        <span><%= (!user.fullName) ? '' : user.fullName %></span>
      </div>
    </div>
    <div class="d-flex flex-column gap-2">
      <ul>
        <li>
          <span class="text-muted">Birthday:</span>
          <span><%= new Date(user.birthday).toLocaleDateString('en-US', { day: '2-digit', month: 'long', year: 'numeric' }) %></span>
        </li>
        <li>
          <span class="text-muted">Gender:</span>
          <span><%= user.gender %></span>
        </li>
      </ul>
      <div>
        <span>About me:</span>
        <p class="border bg-white rounded p-2" style="white-space: pre-wrap; text-align: justify;"><%= (!user.description) ? '-' : user.description %></p>
      </div>
    </div>
    <div>
      My Contact:
      <ul>
        <li>
          <span class="text-muted">Address:</span>
          <a href="<%= (!user.address) ? '#' : 'https://www.google.com/maps/search/'+user.address %>" class="text-decoration-none <%= (!user.address) ? 'text-muted' : '' %>" target="_blank" rel="noopener"><%= (!user.address) ? ' - ' : user.address %></a>
        </li>
