<% layout('layouts/app') %>

<h1 class="text-center mt-2 mb-4">Login</h1>
<div class="col-10 offset-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
  <form action="/login" method="POST" class="validated-form" novalidate>

    <div class="form-floating mb-3">
      <input type="text" class="form-control" name="username" id="username" placeholder="your_username" required>
      <label for="username">Username</label>
    </div>

    <div class="mb-3 input-group">
      <div class="form-floating">
        <input type="password" class="form-control" name="password" id="password" placeholder="your_password" required>
        <label for="password">Password</label>
      </div>
      <%- include('../layouts/partials/passwordToggle') %>
    </div>

    <p class="fs-6 text-muted">
      <small>
        Don't have an account? 
        <a href="/register" class="text-decoration-none">Sign up here</a>.
        Forgot your password?
        <a href="https://www.youtube.com/watch?v=dQw4w9WgXcQ" class="text-decoration-none">Click here</a>
      </small>
    </p>

    <div class="g-recaptcha" data-sitekey="6Lc-PqIrAAAAACHP379FSGYBd44YVdw56h_ugVRA"></div>

    <div class="mt-3 d-flex justify-content-end">
      <button type="submit" class="btn btn-success d-flex align-items-center justify-content-center gap-2 px-3">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-in-right" viewBox="0 0 16 16">
          <path fill-rule="evenodd" d="M6 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 0-1 0v2A1.5 1.5 0 0 0 6.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-8A1.5 1.5 0 0 0 5 3.5v2a.5.5 0 0 0 1 0z"/>
          <path fill-rule="evenodd" d="M11.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H1.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708z"/>
        </svg>
        Login
      </button>
    </div>
  
  </form>
</div>
