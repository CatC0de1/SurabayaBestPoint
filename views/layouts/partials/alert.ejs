<% if(success_msg && success_msg.length > 0 ) { %>

  <div class="fixed-top d-flex justify-content-center mt-5" id="autoDismissAlert">

    <div class="alert alert-success alert-dismissible w-auto fade show" role="alert">
      <div class="d-flex align-items-center gap-3">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
          <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425z"/>
        </svg>
        <span>
          <%= success_msg %>
        </span>
      </div>
      <button type="button" class="btn-close ms-1" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

  </div>

<% } %>


<% if(error_msg && error_msg.length > 0 ) { %>

  <div class="fixed-top d-flex justify-content-center mt-5" id="autoDismissAlert">

    <div class="alert alert-danger alert-dismissible w-auto fade show" role="alert">
      <div class="d-flex align-items-center gap-3">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-exclamation-triangle" viewBox="0 0 16 16">
          <path d="M7.938 2.016A.13.13 0 0 1 8.002 2a.13.13 0 0 1 .063.016.15.15 0 0 1 .054.057l6.857 11.667c.036.06.035.124.002.183a.2.2 0 0 1-.054.06.1.1 0 0 1-.066.017H1.146a.1.1 0 0 1-.066-.017.2.2 0 0 1-.054-.06.18.18 0 0 1 .002-.183L7.884 2.073a.15.15 0 0 1 .054-.057m1.044-.45a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767z"/>
          <path d="M7.002 12a1 1 0 1 1 2 0 1 1 0 0 1-2 0M7.1 5.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0z"/>
        </svg>
        <span>
          <%= error_msg %>
        </span>
      </div>
      <button type="button" class="btn-close ms-1" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

  </div>
  
<% } %>


<script>
  setTimeout(function() {
    const alert = document.getElementById('autoDismissAlert');
    if (alert) {
      alert.remove();
    }
  }, 5000); // alert otomatis dihapus setelah 5 detik
</script>