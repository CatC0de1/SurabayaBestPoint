<% layout('layouts/app') %>

<div class="row">
  <div class="col-10 offset-1">
    <div class="card">
      <img class="card-img-top rounded img-fuild" src="<%= place.image %>" alt="<%= place.title %>" style="max-width: 80%; margin: 0 auto; margin-top: 5%; margin-bottom: 5%;">
      <div class="card-body">
        <h3 class="card-title"><%= place.title %></h3>
        <p class="card-text"><%= place.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Location: <%= place.location %></li>
        <li class="list-group-item">Price: Rp <%= place.price %></li>
      </ul>
      <div class="card-body">
        <a href="/places/<%= place.title %>/edit" class="btn card-link btn-warning text-white">Edit</a>
        <!-- <form action="/places/<%#= place.title %>?_method=DELETE" method="POST" style="display: inline!important;">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form> -->
        
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">Delete</button>
        <div class="modal fade" id="exampleModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Need Admin Permission!</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <form action="/places/<%= place.title %>?_method=DELETE" method="POST" style="display: inline!important;">
                <div class="modal-body">
                  <label for="username" class="form-label">Admin Username</label>
                  <input type="text" class="form-control" name="username" id="username" required>
                  <label for="password" class="form-label">Admin Password</label>
                  <input type="password" class="form-control" name="password" id="password" required>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-danger">Delete</button>
                </div>
              </form>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<a href="/places" class="btn btn-primary mt-4 offset-1">All places</a>